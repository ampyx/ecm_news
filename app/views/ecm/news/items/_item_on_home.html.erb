<%= link_to(item, style: 'color:black;font-weight:normal;text-decoration:none;') do %>
<div class="panel panel-default item">
	<div class="panel-heading">
		<h3 class="panel-title"><%= item.title %></h3>
	</div>
	<div class="panel-body">
		<%= truncate(mu(item, :body), :length => Ecm::News::Configuration.news_item_preview_length, :separator => ' ').html_safe %>
	</div>
	<div class="panel-footer">
		<span class="small_text"><%= I18n.l(item.published_at) %></span>
	</div>
</div>
<% end %>
